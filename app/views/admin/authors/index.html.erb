<% provide :title, t(".title") %>
<h1><%= t ".name" %></h1>

<div class="row">
  <div class="col-lg-8 offset-lg-2">
    <%= link_to t(".new"), new_admin_author_path,
        class: "btn btn-success" %>
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col"><%= t ".author_name" %></th>
          <th scope="col"><%= t ".options" %></th>
        </tr>
      </thead>

      <tbody>
        <%= render @authors %>
      </tbody>
    </table>
  </div>
</div>

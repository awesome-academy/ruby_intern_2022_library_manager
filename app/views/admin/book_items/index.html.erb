<% provide :title, t(".title", title: @book.title) %>
<h1><%= t ".name", title: @book.title %></h1>

<div class="row">
  <div class="col-lg-8 offset-lg-2">
    <%= link_to t(".new"), new_admin_book_book_item_path,
        class: "btn btn-success" %>
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col"><%= t ".bar_code" %></th>
          <th scope="col"><%= t ".price" %></th>
          <th scope="col"><%= t ".status" %></th>
          <th scope="col"><%= t ".options" %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @book_items %>
      </tbody>
    </table>
  </div>
</div>
